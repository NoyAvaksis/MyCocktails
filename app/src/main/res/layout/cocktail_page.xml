<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F0E7"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    />

        <TextView
            android:id="@+id/cocktail_TV_Name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="margarita"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="@font/base3"
            android:background="@drawable/frame_top"
            />




        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cocktail_IV_Image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/cocktail1"
            >

        </com.google.android.material.imageview.ShapeableImageView>



        <ImageButton
            android:id="@+id/cocktail_IB_like"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/heart"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/base3"
            android:textSize="24dp"
            android:background="@drawable/frame_top"
            android:gravity="center"

            android:layout_gravity="center"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cocktailPage_RC_Ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/base3"
            android:textSize="24dp"
            android:background="@drawable/frame_top"
            android:gravity="center"
            android:layout_gravity="center"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cocktailPage_RC_Instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center"
            />



    </LinearLayout>

    </ScrollView>

</LinearLayout>