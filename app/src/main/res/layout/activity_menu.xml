<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F0E7"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/menu_BTN_logout"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="logout"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#B3C59D"
                android:fontFamily="@font/base3"
                >
            </Button>


            <TextView
                android:id="@+id/menu_TXT_quickFind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Finds"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:textSize="35dp"
                android:textColor="@color/black"
                android:fontFamily="@font/base3"
                />
            <LinearLayout
                android:id="@+id/menu_LNR_quickFinds"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="45dp"


                >

                <ImageButton
                    android:id="@+id/menu_BTN_quickFindVodka"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_cup"
                    android:layout_weight="1"
                    android:backgroundTint="#F1997D"
                    />

                <ImageButton
                    android:id="@+id/menu_BTN_quickFindTequila"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_cup"
                    android:layout_weight="1"
                    android:backgroundTint="#F1997D"

                    />
                <ImageButton
                    android:id="@+id/menu_BTN_quickFindRum"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_cup"
                    android:layout_weight="1"
                    android:backgroundTint="#F1997D"

                    />
                <ImageButton
                    android:id="@+id/menu_BTN_quickFindWhisky"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_cup"
                    android:layout_weight="1"
                    android:backgroundTint="#F1997D"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="45dp"
                >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="VODKA"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/base3"

                    />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="TEQUILA"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/base3"

                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="RUM"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/base3"

                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="GIN"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/base3"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAllClassic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    >

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_classic"
                        android:alpha="0.6"
                        android:clickable="false"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:backgroundTint="#DBBDA0"
                        android:layout_gravity="center"
                        android:text="All Classic Cocktails"
                        android:fontFamily="@font/base3"
                        android:textStyle="bold"
                        android:clickable="false"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:id="@+id/cvRandom"
                    >

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_random"
                        android:alpha="0.5"
                        android:clickable="false"

                        />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:backgroundTint="#DBBDA0"
                        android:layout_gravity="center"
                        android:text="Random Cocktail"
                        android:fontFamily="@font/base3"
                        android:textStyle="bold"
                        android:clickable="false"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Rated Cocktails"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:fontFamily="@font/base3"
                android:textColor="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_rated_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:overScrollMode="always"
                android:scrollbars="horizontal"
                app:reverseLayout="false"
                android:layout_marginTop="16dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Bar"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:fontFamily="@font/base3"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu_CV_Find"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    >

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_mybar"
                        android:alpha="0.6"
                        android:clickable="false"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="#DBBDA0"
                        android:fontFamily="@font/base3"
                        android:text="find a cocktail based on the ingredients you have"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:clickable="false"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>